{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "lib": [
      "ESNext",
      "DOM",
      "dom.iterable"
    ],
    "baseUrl": ".",
    "rootDir": "../",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "#/*": [
        "*"
      ],
      "#s/*": [
        "src/*"
      ],
      "#p/*": [
        "pages/*"
      ],
      "#r/*": [
        "renderer/*"
      ],
      "#e/*": [
        "examples/*"
      ]

    },
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "api/**/*.ts",

    "pages/**/*.ts",
    "pages/**/*.tsx",
    "pages/**/*.vue",

    "renderer/**/*.ts",
    "renderer/**/*.tsx",
    "renderer/**/*.vue",

    "examples/**/*.ts",
    "examples/**/*.tsx",
    "examples/**/*.vue",

    "vike-vue/**/*.ts",
    "vitepress/**/*.ts",
    "vitepress/**/*.vue",

    "typings/**/*.d.ts",

    "../typings/**/*.d.ts",
    "vite.config.mts"
  ],
  "exclude": [
    "node_modules"
  ]
}
