generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

model File {
  id        String   @id @default(cuid())
  hash      String   @unique
  filename  String
  encoding  String
  mimeType  String
  size      Int
  path      String
  createdAt DateTime @default(now())
  createdBy String?
}
